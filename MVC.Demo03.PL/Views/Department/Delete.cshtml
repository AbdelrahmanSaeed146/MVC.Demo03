@model Department


@{
    ViewData["Title"] = "Delete Department";
}

<h1> Are You sure To  Delete This Department ?</h1>

<br />
<br />


<form asp-action="Delete" class="mt-5">

    <div class="form-group">
        <label asp-for="Code" class="col-form-label"></label>
        <input asp-for="Code" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="DateOfCreation" class="col-form-label"></label>
        <input asp-for="DateOfCreation" class="form-control">
    </div>

    <input type="submit" value="Delete" class="btn btn-danger">
    <a asp-controller="Department" asp-action="Index" class="btn btn-link">Cancel</a>


</form>



