@model Employee
@{
    ViewData["Title"] = "Edit Employee";
}

<h1>Edit Employee</h1>


<br />
<br />

<form asp-action="Edit" class="mt-5">

    <div asp-asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age" class="col-form-label"></label>
        <input asp-for="Age" class="form-control">
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender" class="col-form-label"></label>
        <input asp-for="Gender" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="IsActive" class="col-form-label form-check-input"></label>
        <input asp-for="IsActive" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="HiringDate" class="col-form-label"></label>
        <input asp-for="HiringDate" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control">
    </div>

    <input type="submit" value="Save" class="btn btn-primary"></input>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Cancel</a>


</form>



@section ValidationsScriptsSection {

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
