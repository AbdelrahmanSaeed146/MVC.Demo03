@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>

<br>
<br>

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>

<br/>
  

@* @if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
} *@


<div class="row justify-content-center align-items-center  mt-5">
    <form asp-action="Index" class="row col-8 offset-2 ">
        <div class="col-8">
            <input type="text" class="form-control " name="SearchInput" placeholder="Search By Name" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success " value="Search"  />
        </div>
    </form>
</div>



@if (Model.Count() > 0 )
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(e=> e.Name)</th>
                <th>@Html.DisplayNameFor(e=> e.Age)</th>
                <th>@Html.DisplayNameFor(e=> e.Department)</th>
                <th>@Html.DisplayNameFor(e=> e.Salary)</th>
                <th>@Html.DisplayNameFor(e=> e.IsActive)</th>
                @* <th>@Html.DisplayNameFor(e=> e.PhoneNumber)</th> *@
                <th>@Html.DisplayNameFor(e=> e.Gender)</th>
                @* <th>@Html.DisplayNameFor(e=> e.EmployeeType)</th>
                <th>@Html.DisplayNameFor(e=> e.HiringDate)</th> *@
                <th>@Html.DisplayNameFor(e=> e.Email)</th>
 
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>


        <tbody>

            @foreach(var emp in Model)
            {
                <tr>
                    <td>@emp.Name</td>
                    <td>@emp.Age</td>
                    <td>@emp.Department?.Name</td>
                    <td>@Html.DisplayFor(e=> emp.Salary)</td>
                    <td>@Html.DisplayFor(e=> emp.IsActive)</td>
                    <td>@emp.Gender</td>
                    <td>@Html.DisplayFor(e=> emp.Email)</td>
                    <partial name="_ButtonsPartial" model="@emp.Id"/>

                </tr>
            }

        </tbody>
    </table>
}

else
{
    <div class="mt-5 alert alert-danger ">
        <h2>There is No Employees </h2>
    </div>
}


